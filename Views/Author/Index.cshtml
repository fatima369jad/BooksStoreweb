@model IEnumerable<BooksStore.Models.Author>

@{
    ViewBag.Title = "Author List";
}

<h2>Author List</h2>

<p>
    @Html.ActionLink("Add New Author", "Add", null, new { @class = "btn btn-primary" })
</p>

<table class="table">
    <tr>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Date of Birth</th>
        <th>Action</th>
    </tr>

    @foreach (var author in Model)
    {
        <tr>
            <td>@author.FirstName</td>
            <td>@author.LastName</td>
            <td>@author.DateOfBirth.ToShortDateString()</td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = author.ID }) |
                @Html.ActionLink("Delete", "Delete", new { id = author.ID })
            </td>
        </tr>
    }
</table>
