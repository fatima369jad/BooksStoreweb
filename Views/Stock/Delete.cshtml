@model BooksStore.Models.StockSaldo

@{
    ViewBag.Title = "Delete";
}

<h2>Delete Stock Item</h2>

<h3>Are you sure you want to delete this stock item?</h3>
<div>
    <h4>Stock Item Details</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.StoreID)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.StoreID)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.ISBN)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.ISBN)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Number)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Number)
        </dd>
    </dl>

    @using (Html.BeginForm("DeleteConfirmed", "Stock", FormMethod.Post))
    {
        @Html.AntiForgeryToken()

        <input type="hidden" name="storeId" value="@Model.StoreID" />
        <input type="hidden" name="isbn" value="@Model.ISBN" />

        <p>
            <input type="submit" value="Delete" class="btn btn-danger" />
            @Html.ActionLink("Cancel", "Index", null, new { @class = "btn btn-default" })
        </p>
    }
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
